<UserControl x:Class="PointOfSale.OrderSummaryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <Grid>
        <!--><TextBlock Text="Order" TextAlignment="Center"/>
-->        <!-- Create coulumn divisions -->
        <Grid.ColumnDefinitions>
            <!-- Order items -->
            <ColumnDefinition/>
            <!-- Prices -->
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>

            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Path=OrderNumber}" TextAlignment="Left" Grid.Row="0"/>

        <TextBlock Text="Items" TextAlignment="Left" Grid.Row="1"/>
        <TextBlock Text="Prices" TextAlignment="Left" Grid.Column="2" Grid.Row="1"/>


        <ListView ItemsSource="{Binding Path=Items}" HorizontalContentAlignment="Stretch" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                            <TextBlock Text="{Binding}"/>
                            <TextBlock Text="{Binding Path=Price}" TextAlignment="Right"/>
                        </StackPanel>
                        <ListView ItemsSource="{Binding Path=SpecialInstructions}"></ListView>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock Text="Subtotal" TextAlignment="Left" VerticalAlignment="Bottom" Grid.Row="4"/>
        <TextBlock x:Name="SubtotalPrice" TextAlignment="Left" VerticalAlignment="Bottom" Grid.Row="4" Grid.Column="2" Text="{Binding Path=Subtotal, StringFormat=c}"/>
        
        
        
        <!-- Create list view for order items -->
       
        <!--<StackPanel x:Name="Header" Orientation="Horizontal">
            
            
            
        </StackPanel>-->

        <!-- Create list view for prices -->
       
        <!--<StackPanel x:Name="Items">
            
            
            
        </StackPanel>

        <StackPanel x:Name="Prices" Orientation="Horizontal">
            --><!-- Textbox for price subtotal -->
            
            <!-- Display price subtotal in this text box -->

        <!--</StackPanel>-->
    </Grid>
    
</UserControl>
