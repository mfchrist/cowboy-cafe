<UserControl x:Class="PointOfSale.OrderSummaryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <Grid>
        <!--><TextBlock Text="Order" TextAlignment="Center"/>
-->        <!-- Create coulumn divisions -->
        <Grid.ColumnDefinitions>
            <!-- Order items -->
            <ColumnDefinition/>
            <!-- Prices -->
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <!-- Create list view for order items -->
        <StackPanel x:Name="Items"  Grid.Column="0">
            <TextBlock Text="Order" TextAlignment="Center"/>
            <ListView x:Name="OrderList"></ListView>
            <!-- Textbox for price subtotal -->
            <TextBlock Text="Subtotal" TextAlignment="Center" VerticalAlignment="Bottom"/>
        </StackPanel>

        <!-- Create list view for prices -->
        <StackPanel x:Name="Prices"  Grid.Column="1">
            <TextBlock Text="Prices" TextAlignment="Center"/>
            <ListView x:Name="PriceList"></ListView>
            <!-- Display price subtotal in this text box -->
            <TextBlock x:Name="SubtotalPrice" TextAlignment="Center" VerticalAlignment="Bottom"/>
        </StackPanel>
    </Grid>
    
</UserControl>
